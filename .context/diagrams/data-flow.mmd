    P --> C[Data Cleaning]
    C --> F[Feature Engineering]
    
    %% Feature Processing
    F --> FD[Demographic<br/>Features]
    F --> FL[Location<br/>Features]
    F --> FT[Temporal<br/>Features]
    
    %% Model Pipeline
    FD & FL & FT --> M[Model Training]
